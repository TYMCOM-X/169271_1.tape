  record!pointer (IF.Rec) procedure New.IF.Record
      (record!pointer (IF.Rec) Ptr1);
  begin "New.IF.Record"
    record!pointer (IF.Rec)
      X;

    X _ new!record(IF.Rec);
    IF.Rec:Slot[X] _ 0;
    IF.Rec:Prev[X] _ Ptr1;
    return(X);
  end "New.IF.Record";


